<!DOCTYPE html>
<html>
  <head>
    <title>GitAuth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to 'Logout', omniauth_callbacks_destroy_user_session_path, hidden: !current_user.present? %>
    </header>
    <%= yield %>
  </body>
</html>
